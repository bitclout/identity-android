<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitclout.identity">

    <application>
        <activity android:name="com.bitclout.identity.views.LoginActivity">
            <intent-filter >
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="login"
                    android:scheme="identity" />
            </intent-filter>
        </activity>
        <provider
            android:name=".IdentityInitProvider"
            android:authorities="${applicationId}.IdentityInitProvider"
            android:exported="false" />
    </application>

</manifest>